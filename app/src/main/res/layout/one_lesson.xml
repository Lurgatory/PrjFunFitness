<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Lesson Title :"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/tvOneLessonTitle"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tvTitle"
        />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Content : "
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/tvOneLessonTitle"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/tvOneLessonTitle"/>

    <TextView
        android:id="@+id/tvOneLessonContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/tvContent"
        app:layout_constraintLeft_toLeftOf="@+id/tvContent"

        />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author : "
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintRight_toLeftOf="@+id/tvDate"
        android:layout_marginRight="60dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvOneLessonAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="@+id/tvAuthor"
        app:layout_constraintTop_toTopOf="@+id/tvOneLessonTitle"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date : "
        app:layout_constraintTop_toTopOf="@+id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tvOneLessonDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/tvOneLessonTitle"
        app:layout_constraintLeft_toLeftOf="@+id/tvDate"/>
</androidx.constraintlayout.widget.ConstraintLayout>


