<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PrjWeightRecords" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="FooterImageViewStyle">
        <item name="android:scaleType">fitCenter</item>
<!--        <item name="android:backgroundTint">#8C61777F</item>-->
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/footer_style</item>
    </style>
    <style name="FooterImageViewSelectedStyle">
        <item name="android:scaleType">fitCenter</item>
<!--        <item name="android:backgroundTint">#12313E</item>-->
        <item name="android:padding">15dp</item>
        <item name="android:background">@drawable/footer_style</item>
    </style>
    <style name="Common_Text_style">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="EditText_style">
        <item name="android:layout_height">40dp</item>
    </style>
</resources>